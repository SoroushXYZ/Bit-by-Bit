{
  "pipeline": {
    "name": "Bit-by-Bit Newsletter Pipeline",
    "version": "1.0.0",
    "description": "Automated tech newsletter content pipeline",
    "author": "Bit-by-Bit Team"
  },
  "logging": {
    "level": "INFO",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s",
    "file": "pipeline/logs/pipeline.log",
    "max_size_mb": 100,
    "backup_count": 5
  },
  "data": {
    "base_path": "pipeline/data",
    "raw_data_path": "pipeline/data/raw",
    "processed_data_path": "pipeline/data/processed",
    "output_data_path": "pipeline/data/output"
  },
  "steps": {
    "rss_gathering": {
      "enabled": true,
      "order": 1,
      "description": "Gather RSS feed data",
      "config_file": "pipeline/config/rss_gathering_config.json"
    },
    "content_filtering": {
      "enabled": true,
      "order": 2,
      "description": "Basic content filtering (length and language)",
      "config_file": "pipeline/config/content_filtering_config.json"
    },
    "ad_detection": {
      "enabled": true,
      "order": 3,
      "description": "Advertisement detection using custom DistilBERT model",
      "config_file": "pipeline/config/ad_detection_config.json"
    },
    "llm_quality_scoring": {
      "enabled": true,
      "order": 4,
      "description": "LLM-based content quality scoring using Ollama",
      "config_file": "pipeline/config/llm_quality_scoring_config.json"
    },
    "deduplication": {
      "enabled": true,
      "order": 5,
      "description": "Deduplication using sentence transformers to find similar articles",
      "config_file": "pipeline/config/deduplication_config.json"
    },
    "article_prioritization": {
      "enabled": true,
      "order": 6,
      "description": "LLM-based article prioritization to categorize articles into headlines, secondary, and optional",
      "config_file": "pipeline/config/article_prioritization_config.json"
    },
    "summarization": {
      "enabled": true,
      "order": 7,
      "description": "Article summarization for newsletter generation with category-based length requirements",
      "config_file": "pipeline/config/summarization_config.json"
    },
    "newsletter_generation": {
      "enabled": true,
      "order": 8,
      "description": "Generate clean newsletter output with pipeline visualization data",
      "config_file": "pipeline/config/newsletter_generation_config.json"
    }
  }
}
