{
  "step_name": "rss_gathering",
  "description": "Gather raw RSS feed data from configured sources",
  "enabled": true,
  "rss_feeds_config": "pipeline/config/rss_feeds.json",
  "settings": {
    "max_age_hours": 24,
    "max_items_per_feed": 30,
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "retry_delay_seconds": 2,
    "parallel_requests": 5,
    "request_delay_seconds": 0.5
  },
  "output": {
    "format": "json",
    "filename_template": "rss_raw_{timestamp}.json",
    "include_metadata": true,
    "compress": false
  },
  "error_handling": {
    "continue_on_feed_error": true,
    "log_failed_feeds": true,
    "max_consecutive_failures": 10,
    "skip_feeds_after_max_failures": false
  },
  "filtering": {
    "min_content_length": 10,
    "required_fields": ["title"],
    "exclude_patterns": [],
    "include_patterns": []
  }
}
