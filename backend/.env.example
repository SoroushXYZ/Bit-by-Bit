# Backend Environment Configuration
ENVIRONMENT=development

# AWS Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_DEFAULT_REGION=us-east-1
AWS_PROFILE=

# S3 Buckets
AWS_S3_BUCKET_DEV=bit-by-bit-dev-data
AWS_S3_BUCKET_PROD=bit-by-bit-prod-data

# Security Configuration
# IP Whitelist - comma-separated list of allowed IP addresses
# Use "0.0.0.0" to allow all IPs (default)
# Examples:
#   ALLOWED_IPS=0.0.0.0                           # Allow all IPs
#   ALLOWED_IPS=127.0.0.1                         # Allow only localhost
#   ALLOWED_IPS=127.0.0.1,192.168.1.100          # Allow specific IPs
#   ALLOWED_IPS=127.0.0.1,192.168.1.0/24         # Allow IP range (if supported)
ALLOWED_IPS=0.0.0.0

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true